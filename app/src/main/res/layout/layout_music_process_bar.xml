<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000">

    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:text="00:00"
        android:textColor="@color/colorCCWhite"/>

    <TextView
        android:id="@+id/endTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:text="03:00"
        android:textColor="@color/color88White"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/endTimeTextView"
        android:layout_toRightOf="@id/startTimeTextView">


        <View
            android:id="@+id/dstView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/bg_music_process_bar_dst"/>

        <View
            android:id="@+id/srcView"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@drawable/bg_music_process_bar_src"/>
    </FrameLayout>

    <ImageView
        android:layout_width="20dp"
        android:id="@+id/vernierImageView"
        android:layout_height="20dp"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/startTimeTextView"
        android:src="@mipmap/live_color_7_prs"/>

</RelativeLayout>