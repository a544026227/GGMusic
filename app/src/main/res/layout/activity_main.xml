<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--头部标题-->
        <RelativeLayout
            android:id="@+id/titleRelativeLayut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/menuImageView"
                style="@style/main_actionbar_image"
                android:src="@mipmap/actionbar_menu"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerInParent="true">


                <ImageView
                    android:id="@+id/discoverImageView"
                    style="@style/main_actionbar_image_center"
                    android:src="@mipmap/actionbar_discover_selected"/>

                <ImageView
                    android:id="@+id/musicImageView"
                    style="@style/main_actionbar_image_center"
                    android:src="@mipmap/actionbar_music_prs"/>

                <ImageView
                    android:id="@+id/friendsImageView"
                    style="@style/main_actionbar_image_center"
                    android:src="@mipmap/actionbar_friends_prs"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/searchImageView"
                style="@style/main_actionbar_image"
                android:layout_alignParentRight="true"
                android:src="@mipmap/actionbar_search"/>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/contentViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleRelativeLayut"/>


        <gl.com.ggmusic.widget.BottomMusicView
            android:id="@+id/bottomMusicView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <gl.com.ggmusic.widget.MainSideMeunView
        android:id="@+id/menuLayout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:translationZ="8dp"/>
</android.support.v4.widget.DrawerLayout>