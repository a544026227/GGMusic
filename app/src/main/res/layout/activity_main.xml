<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            style="@style/main_actionbar_image"
            android:src="@mipmap/actionbar_menu"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true">


            <ImageView
                style="@style/main_actionbar_image_center"
                android:src="@mipmap/actionbar_discover_selected"/>

            <ImageView
                style="@style/main_actionbar_image_center"
                android:src="@mipmap/actionbar_music_prs"/>

            <ImageView
                style="@style/main_actionbar_image_center"
                android:src="@mipmap/actionbar_friends_prs"/>
        </LinearLayout>

        <ImageView
            style="@style/main_actionbar_image"
            android:layout_alignParentRight="true"
            android:src="@mipmap/actionbar_search"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Activity"/>
</LinearLayout>